<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="@android:color/black"
                app:layout_constraintBottom_toTopOf="@+id/cvambilPesan"
                app:layout_constraintEnd_toEndOf="@+id/cvbayarTagihan"
                app:layout_constraintStart_toStartOf="@+id/cvbayarTagihan"
                app:layout_constraintTop_toBottomOf="@+id/cvbayarTagihan" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvambilPesan"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginTop="37dp"
                android:backgroundTint="#00A496"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="@+id/cvbayarTagihan"
                app:layout_constraintStart_toStartOf="@+id/cvbayarTagihan"
                app:layout_constraintTop_toBottomOf="@+id/cvbayarTagihan">

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="70dp"
                    android:paddingTop="36dp"
                    android:text="Ambil pesanan yang tersdia"
                    android:textColor="#FAF8F8"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="70dp"
                    android:paddingTop="6dp"
                    android:text="Ambil Pesanan"
                    android:textColor="#FFFDFD"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingTop="12dp"
                    app:srcCompat="@drawable/ic_gears_meka" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvUang"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView5">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_back_meka"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/textView34"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="Rupiah Indonesia"
                        android:textColor="#FAF8F8"
                        app:layout_constraintStart_toStartOf="@+id/textView129"
                        app:layout_constraintTop_toBottomOf="@+id/textView129" />

                    <TextView
                        android:id="@+id/tvtagihan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Rp 0"
                        android:textColor="#FAF6F6"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="@+id/textView34"
                        app:layout_constraintTop_toBottomOf="@+id/textView34" />

                    <TextView
                        android:id="@+id/textView129"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Tagihan Layanan"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvbayarTagihan"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#1BCABB"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvUang">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="28dp"
                    android:paddingTop="16dp"
                    app:srcCompat="@drawable/ic_dompet_meka" />

                <TextView
                    android:id="@+id/textView36"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="70dp"
                    android:paddingTop="6dp"
                    android:text="Bayar Tagihan"
                    android:textColor="#FAFAFA"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:paddingLeft="70dp"
                    android:paddingTop="36dp"
                    android:text=" Gunakan saldo untuk ambil pesanan"
                    android:textColor="#F8F7F7"
                    android:textSize="12dp" />
            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#1BCABB"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvNamamekanik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="24dp"
                    android:paddingTop="36dp"
                    android:paddingBottom="9dp"
                    android:text="Okto Pembalap"
                    android:textColor="#FAFAFA"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingLeft="24dp"
                    android:paddingTop="6dp"
                    android:text="Selamat Datang"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="48dp" >

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:src="@tools:sample/avatars" />
                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:id="@+id/frameLayout8"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginTop="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cvambilPesan">

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="12dp"
                    android:text="Riwayat Transaksi"
                    android:textColor="#020202"
                    android:textSize="16dp" />
            </FrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMekanik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout8" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>