                android:textColor="@color/black"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/tvLayananm"
                app:layout_constraintTop_toBottomOf="@+id/tvLayananm" />

            <TextView
                android:id="@+id/tvBiayam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rp 5.000"
                android:textColor="@color/black"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/tvHargam"
                app:layout_constraintTop_toBottomOf="@+id/tvHargam" />

            <TextView
                android:id="@+id/tvProfitm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Rp 45.000"
                android:textColor="@color/black"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@+id/tvBiayam"
                app:layout_constraintTop_toBottomOf="@+id/tvBiayam" />

            <TextView
                android:id="@+id/tvAddressdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Alamat"
                app:layout_constraintStart_toStartOf="@+id/textView132"
                app:layout_constraintTop_toBottomOf="@+id/textView132" />

        </androidx.constraintlayout.widget.ConstraintLayout>
